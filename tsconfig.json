{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2017", "es2020", "dom"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./lib"
  },
  "files": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
